rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /all_users/{document} {
      allow create: if request.auth.uid == document;
      allow read: if request.auth != null;
      allow write: if request.auth.uid == document;
      allow delete: if false;
    }

    match /chats/{document} {
      allow create: if /databases/$(database)/documents/all_users/$(request.auth.uid) in request.resource.data.users;
      allow read: if /databases/$(database)/documents/all_users/$(request.auth.uid) in resource.data.users;
      allow write: if /databases/$(database)/documents/all_users/$(request.auth.uid) in resource.data.users;
      allow delete: if false;
    }

    match /chat_messages/{document} {
      allow create: if /databases/$(database)/documents/all_users/$(request.auth.uid) in get(request.resource.data.chat).data.users
&& /databases/$(database)/documents/all_users/$(request.auth.uid) == request.resource.data.user;
      allow read: if /databases/$(database)/documents/all_users/$(request.auth.uid) in get(resource.data.chat).data.users;
      allow write: if false;
      allow delete: if false;
    }

    match /posts/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }

    match /posts/{parent}/posts_comments/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }

    match /{path=**}/posts_comments/{document} {
      allow read: if true;
    }


    match /events/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }

    match /all_users/{parent}/user_follows/{document} {
      allow create: if request.auth.uid == parent;
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if false;
    }

    match /{path=**}/user_follows/{document} {
      allow read: if request.auth != null;
    }


    match /all_users/{parent}/user_followers/{document} {
      allow create: if request.auth.uid == parent;
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if false;
    }

    match /{path=**}/user_followers/{document} {
      allow read: if request.auth != null;
    }


    match /events/{parent}/events_participants/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }

    match /{path=**}/events_participants/{document} {
      allow read: if true;
    }


    match /all_users/{parent}/user_requestsReceived/{document} {
      allow create: if request.auth.uid == parent;
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if false;
    }

    match /all_users/{parent}/user_members/{document} {
      allow create: if request.auth.uid == parent;
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if false;
    }

    match /{path=**}/user_members/{document} {
      allow read: if request.auth != null;
    }


    match /all_users/{parent}/user_blocked/{document} {
      allow create: if request.auth.uid == parent;
      allow read: if true;
      allow write: if request.auth.uid == parent;
      allow delete: if false;
    }
  }
}
