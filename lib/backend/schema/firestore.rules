rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /all_users/{document} {
      allow create: if request.auth.uid == document;
      allow read: if true;
      allow write: if request.auth.uid == document;
      allow delete: if false;
    }

    match /chats/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if false;
    }

    match /chat_messages/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow write: if resource.data.user == /databases/$(database)/documents/all_users/$(request.auth.uid);
      allow delete: if resource.data.user == /databases/$(database)/documents/all_users/$(request.auth.uid);
    }

    match /posts/{document} {
      allow create: if request.auth != null;
      allow read: if true;
      allow write: if resource.data.post_user == /databases/$(database)/documents/all_users/$(request.auth.uid);
      allow delete: if resource.data.post_user == /databases/$(database)/documents/all_users/$(request.auth.uid);
    }

    match /posts/{parent}/posts_comments/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if resource.data.comment_user == /databases/$(database)/documents/all_users/$(request.auth.uid);
      allow delete: if resource.data.comment_user == /databases/$(database)/documents/all_users/$(request.auth.uid);
    }

    match /{path=**}/posts_comments/{document} {
      allow read: if true;
    }


    match /events/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if resource.data.creator == /databases/$(database)/documents/all_users/$(request.auth.uid);
      allow delete: if resource.data.creator == /databases/$(database)/documents/all_users/$(request.auth.uid);
    }

    match /all_users/{parent}/user_follows/{document} {
      allow create: if request.auth.uid == parent;
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if false;
    }

    match /{path=**}/user_follows/{document} {
      allow read: if true;
    }


    match /all_users/{parent}/user_followers/{document} {
      allow create: if request.auth.uid == parent;
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if false;
    }

    match /{path=**}/user_followers/{document} {
      allow read: if true;
    }


    match /all_users/{parent}/user_members/{document} {
      allow create: if request.auth.uid == parent;
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if false;
    }

    match /{path=**}/user_members/{document} {
      allow read: if true;
    }


    match /all_users/{parent}/user_blocked/{document} {
      allow create: if request.auth.uid == parent;
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if false;
    }

    match /{path=**}/user_blocked/{document} {
      allow read: if true;
    }


    match /all_users/{parent}/user_notificationInbox/{document} {
      allow create: if request.auth.uid == parent;
      allow read: if true;
      allow write: if request.auth.uid == parent;
      allow delete: if request.auth.uid == resource.data.user_receiverID;
    }

    match /broadcasts/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }

    match /internalFeedbackMessages/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }

    match /chats/{parent}/direct_messages/{document} {
      allow create: if /databases/$(database)/documents/all_users/$(request.auth.uid) in get(/databases/$(database)/documents/chats/$(parent)).data.users;
      allow read: if /databases/$(database)/documents/all_users/$(request.auth.uid) in get(/databases/$(database)/documents/chats/$(parent)).data.users;
      allow write: if /databases/$(database)/documents/all_users/$(request.auth.uid) in get(/databases/$(database)/documents/chats/$(parent)).data.users;
      allow delete: if resource.data.user == /databases/$(database)/documents/all_users/$(request.auth.uid);
    }

    match /ff_user_push_notifications/{id} {
      allow read, update, delete: if false;
      allow create: if /databases/$(database)/documents/all_users/$(request.auth.uid) == request.resource.data.sender;
    }
  }
}
